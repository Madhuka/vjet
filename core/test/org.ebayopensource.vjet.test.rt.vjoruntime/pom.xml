<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <parent>
      <groupId>org.ebayopensource.vjet.test</groupId>
      <artifactId>test-parent</artifactId>
      <version>1.0.0-SNAPSHOT</version>
   </parent>

   <groupId>org.ebayopensource.vjet.test</groupId>
   <artifactId>test-core-vjoruntime</artifactId>
   <version>1.0.0-SNAPSHOT</version>
   <packaging>jar</packaging>
   <name>VJET: VjoRuntime Tests</name>
   
   <dependencies>
   		<dependency>
   			<groupId>org.ebayopensource.vjet.test</groupId>
   			<artifactId>test-utils</artifactId>
   			<version>1.0.0-SNAPSHOT</version>
   		</dependency>
   		<dependency>
			<groupId>org.ebayopensource.vjet.extmod</groupId>
   			<artifactId>org.ebayopensource.vjet.extmod.rhino</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.core</groupId>
   			<artifactId>org.ebayopensource.vjet.core.util</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.core</groupId>
   			<artifactId>org.ebayopensource.vjet.core.jsnative</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.core</groupId>
   			<artifactId>org.ebayopensource.vjet.core.vjodef</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.rt</groupId>
   			<artifactId>org.ebayopensource.vjet.rt.active</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.rt</groupId>
   			<artifactId>org.ebayopensource.vjet.rt.vjoruntime</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.rt</groupId>
   			<artifactId>org.ebayopensource.vjet.rt.liveconnect</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.rt</groupId>
   			<artifactId>org.ebayopensource.vjet.rt.jsdebugger</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.rt</groupId>
   			<artifactId>org.ebayopensource.vjet.rt.jsdi</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.web</groupId>
   			<artifactId>org.ebayopensource.vjet.web.kernel</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.web</groupId>
   			<artifactId>org.ebayopensource.vjet.web.html</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.web</groupId>
   			<artifactId>org.ebayopensource.vjet.web.cssparser</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.resource</groupId>
			<artifactId>org.ebayopensource.vjet.resource.jsnativetypes</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.ebayopensource.vjet.resource</groupId>
			<artifactId>org.ebayopensource.vjet.resource.vjolib</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
   </dependencies>

   <properties>
   		<java.source.path>${basedir}/target/test-classes</java.source.path>
   </properties>

   <build>
   		<plugins>
   			<plugin>
	   			<groupId>org.apache.maven.plugins</groupId>
		        <artifactId>maven-resources-plugin</artifactId>
		        <executions>
		          <execution>
		            <id>copy-resources-1</id>
		            <!-- here the phase you need -->
		            <phase>validate</phase>
		            <goals>
		              <goal>copy-resources</goal>
		            </goals>
		            <configuration>
		              <outputDirectory>${basedir}/target/test-classes</outputDirectory>
		              <resources>          
		                <resource>
		                  <directory>${basedir}/../org.ebayopensource.vjet.rt.vjoruntime/src</directory>
		                  <filtering>false</filtering>
		                  <includes>
					          <exclude>**/*.js</exclude>
					      </includes>
		                </resource>
		                <resource>
		                  <directory>${basedir}/src</directory>
		                  <filtering>false</filtering>
		                  <includes>
					          <exclude>**/*.js</exclude>
					      </includes>
		                </resource>
		              </resources>              
		            </configuration>            
		          </execution>
		        </executions>
	        </plugin>
   		</plugins>
   </build>
</project>